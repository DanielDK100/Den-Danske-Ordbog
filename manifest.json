{
  "manifest_version": 2,
  "name": "Den Danske Ordbog",
  "offline_enabled": false,
  "version": "2.1.10",
  "description": "Foretag hurtige opslag i ordnets Den Danske Ordbog.",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl + Shift + U",
        "windows": "Ctrl + Shift + U",
        "mac": "Command + Shift + U",
        "chromeos": "Ctrl + Shift + U",
        "linux": "Ctrl + Shift + U"
      }
    }
  },
  "icons": {
    "128": "img/ikon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/analyticstracking.js", "js/jquery.min.js", "js/event.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "contextMenus",
    "http://*/"
  ]
}