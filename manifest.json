{
  "manifest_version": 2,
  "name": "ordnet.dk - dansk ordbog",
  "version": "1.5",
  "short_name": "ordnet.dk",
  "description": "Foretag hurtige opslag i ordnets.dk danske ordbog.",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl + Shift + U",
        "windows": "Ctrl + Shift + U",
        "mac": "Command + Shift + U",
        "chromeos": "Ctrl + Shift + U",
        "linux": "Ctrl + Shift + U"
      }
    }
  },
  "icons": { 
    "128": "img/ikon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/jquery.min.js", "js/event.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "contextMenus",
    "http://*/"
  ]
}